<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:background="@color/gray"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange"
           >

            <TextView
                android:id="@+id/tvDept"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/tvDept"
                android:textSize="@dimen/tv2_textSize"
                app:layout_constraintStart_toEndOf="@+id/tvTot"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/tvGender"
                android:textSize="@dimen/tv2_textSize"
                app:layout_constraintStart_toEndOf="@+id/tvDept"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTot"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="@string/tvTot"
                android:textSize="@dimen/tv2_textSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>