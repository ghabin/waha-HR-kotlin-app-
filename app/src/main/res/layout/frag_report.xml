<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragReport"
    android:background="@color/gray">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnCall"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="@drawable/btn_reportdept"
        android:inputType="text"
        android:text="تقارير"
        android:textColor="@color/colorAccent"
        android:textSize="48sp"

        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/Maintable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="2dp"
        android:background="@color/gray"
        android:clickable="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:clickable="true"
          >

            <Button
                android:id="@+id/button14"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text="الموارد البشرية"
                android:textSize="18sp"
                android:clickable="true"
                android:focusable="true"
                />

            <Button
                android:id="@+id/button13"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text="تقارير الترقيات"
                android:textSize="18sp"
                android:clickable="true"/>

            <Button
                android:id="@+id/button12"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text="تقارير الإجازات"
                android:textSize="18sp"
                android:clickable="true"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
          >

            <Button
                android:id="@+id/button"
                android:layout_width="139dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text="العمل الأضافي"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text="تقرير الضمان"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text="تقرير المؤهلات"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         >

            <Button
                android:id="@+id/button11"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text=" عن المصروفات"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text=" مصاريف بالدولار"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:text=" التداكر"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

